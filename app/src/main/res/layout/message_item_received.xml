<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/messageItemLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePictureImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/messageItemReceivedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/profilePictureImageView"
        android:layout_marginLeft="10dp"
        android:maxWidth="240dp"/>

    <TextView
        android:id="@+id/senderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fred Robinson"
        android:layout_below="@id/profilePictureImageView" />

    <ImageView
        android:id="@+id/messageReceivedImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"/>

</RelativeLayout>