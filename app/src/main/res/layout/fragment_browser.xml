<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    sothree:umanoPanelHeight="36dp"
    sothree:umanoShadowHeight="0dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/subject_filter"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGrey"
        android:orientation="vertical"
        android:paddingTop="36dp">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/browser_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/list_group_recycle" />

        </android.support.v4.widget.SwipeRefreshLayout>

    </FrameLayout>


    <!-- SLIDING LAYOUT -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_sliding_panel"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBJECTS"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            />

        <!-- SUBJECTS -->
        <RelativeLayout
            android:id="@+id/subject_filter"
            android:padding="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true">

                <!-- TOP ROW -->
                <ImageView
                    android:id="@+id/language_filter_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="30dp"
                    android:padding="5dp"
                    android:src="@drawable/language"
                    />

                <ImageView
                    android:id="@+id/programming_filter_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:padding="5dp"
                    android:src="@drawable/programming"
                    />

                <ImageView
                    android:id="@+id/math_filter_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="30dp"
                    android:padding="5dp"
                    android:src="@drawable/math"
                    />

                <!-- MIDDLE ROW -->

                <ImageView
                    android:id="@+id/science_filter_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/language_filter_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="30dp"
                    android:padding="5dp"
                    android:src="@drawable/science"
                    />

                <ImageView
                    android:id="@+id/engineering_filter_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/programming_filter_icon"
                    android:layout_marginBottom="30dp"
                    android:padding="5dp"
                    android:src="@drawable/engineering"
                    />

                <ImageView
                    android:id="@+id/business_filter_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/math_filter_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="30dp"
                    android:padding="5dp"
                    android:src="@drawable/business"
                    />

                <!-- BOTTOM ROW -->

                <ImageView
                    android:id="@+id/law_filter_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/science_filter_icon"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:src="@drawable/law"
                    />

                <ImageView
                    android:id="@+id/music_filter_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/engineering_filter_icon"
                    android:padding="5dp"
                    android:src="@drawable/music"
                    />

                <ImageView
                    android:id="@+id/other_filter_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/business_filter_icon"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/other"
                    />
        </RelativeLayout>

        <!-- DAY OF MEETING -->

        <TextView
            android:id="@+id/day_of_meeting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAY OF MEETING"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_below="@id/subject_filter"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/day_of_meeting_title"
            android:padding="10dp">

            <Button
                android:id="@+id/filter_day1_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Today"
                android:background="@color/offWhite"
                android:textColor="@color/darkNavy"
                android:textSize="10dp"
                android:clickable="true"
                android:elevation="10dp"
                />

            <Button
                android:id="@+id/filter_day2_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Today"
                android:background="@color/offWhite"
                android:textColor="@color/darkNavy"
                android:textSize="10dp"
                android:clickable="true"
                />

            <Button
                android:id="@+id/filter_day3_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Today"
                android:background="@color/offWhite"
                android:textColor="@color/darkNavy"
                android:textSize="10dp"
                android:clickable="true"
                />

            <Button
                android:id="@+id/filter_day4_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Today"
                android:background="@color/offWhite"
                android:textColor="@color/darkNavy"
                android:textSize="10dp"
                android:clickable="true"
                />

            <Button
                android:id="@+id/filter_day5_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Today"
                android:background="@color/offWhite"
                android:textColor="@color/darkNavy"
                android:textSize="10dp"
                android:clickable="true"
                />

            <Button
                android:id="@+id/filter_day6_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Today"
                android:background="@color/offWhite"
                android:textColor="@color/darkNavy"
                android:textSize="10dp"
                android:clickable="true"
                />

            <Button
                android:id="@+id/filter_day7_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Today"
                android:background="@color/offWhite"
                android:textColor="@color/darkNavy"
                android:textSize="10dp"
                android:clickable="true"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/filter_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/filter_groups"
            />

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>